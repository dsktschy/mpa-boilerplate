{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**/.*.ts", "**/*.js", "**/.*.js"]
}
